= form_for collection, html: { class: 'collection_form' } do |f|

  - if f.object.errors.any?
    #error_explanation
      %h2
        = pluralize f.object.errors.count, "error"
        prohibited
        this collection from being saved:
      %ul
        - f.object.errors.full_messages.each do |msg|
          %li= msg

  = f.label :name do
    Name
    = f.text_field :name
  = f.submit 'Save'
